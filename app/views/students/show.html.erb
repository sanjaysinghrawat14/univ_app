<div class="row">
    <div class="col s6 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <p >Name: <%= @student.name%></p>
          <p >Email: <%= @student.email  %></p>

          <p>Course Enrollment : 
          <% if @student.courses.empty? %>
            None
            <%else%>
            <ul>
            <% @student.courses.each do |course|%>
                <li><%=course.name%></li>
                <%end%>
            <ul>
            <%end%>
          
          </p>
        </div>

      </div>
      <% if current_user ==  @student%>
      <%= link_to '<i class="material-icons right">edit</i>Edit your rofilr'.html_safe,edit_student_path(@student), class: "waves-effect waves-light btn-large" %>
      <% end %>
    </div>